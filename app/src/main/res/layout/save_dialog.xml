<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/et_filename"
        android:text="@string/tv_dialog_filename_title"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <EditText
            android:id="@+id/et_filename"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:importantForAutofill="no"
            android:inputType="text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_dialog_page_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:textColor="@color/black_overlay"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_dialog_page_size_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/et_filename"
        android:text="@string/tv_dialog_page_size_title"
        android:textSize="20sp"
        android:visibility="gone" />

    <Spinner
        android:id="@+id/sp_format_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>
