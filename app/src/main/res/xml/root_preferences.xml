<!-- https://developer.android.com/guide/topics/ui/settings/organize-your-settings -->
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/basic_settings">
        <Preference
            app:fragment="com.todobom.opennotescanner.UploadSettingFragment"
            app:summary="@string/upload_summary"
            app:title="@string/upload_title" />
        <ListPreference
            app:defaultValue=".pdf"
            app:entries="@array/file_formats_entries"
            app:entryValues="@array/file_formats_values"
            app:key="file_format"
            app:summary="@string/save_format_summary"
            app:title="@string/save_format"
            app:useSimpleSummaryProvider="true" />
        <ListPreference
            app:defaultValue="A4"
            app:entries="@array/file_size_entries"
            app:entryValues="@array/file_size_values"
            app:key="page_size"
            app:summary="@string/save_format_summary"
            app:title="@string/file_size"
            app:useSimpleSummaryProvider="true" />
        <SwitchPreference
            app:defaultValue="false"
            app:key="bug_rotate"
            app:summary="@string/bug_rotate_summary"
            app:title="@string/bug_rotate" />

    </PreferenceCategory>
    <PreferenceCategory app:title="@string/about_category">
        <Preference
            app:persistent="false"
            app:summary="@string/github_project_summary"
            app:title="@string/github_project">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/github_link" />
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>
